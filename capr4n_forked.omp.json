{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "right",
      "segments": [
        {
          "foreground":"#83769c",
          "properties": {
            "always_enabled": true
          },
          "template": "\ue0b6",
          "type": "executiontime",
          "style": "powerline"
        },
        {
          "background": "#83769c",
          "foreground": "#eeeeee",
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": " \ufa1e {{ .FormattedMs }} ",
          "type": "executiontime"
        }
      ],
      "type": "rprompt"
    },
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#61AFEF",
          "foreground": "#eeeeee",
          "properties": {
            "display_host": true
          },
          "style": "diamond",
          "template": " {{.UserName}} ",
          "trailing_diamond": "",
          "type": "session"
        },
        {
          "background": "#a078dd",
          "foreground": "#eeeeee",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "folder_icon": "...",
            "folder_separator_icon": "/",
            "max_depth": 2,
            "style": "agnoster_short"
          },
          "style": "powerline",
          "template": " {{ .Path }} ",
          "type": "path"
        },
        {
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#eeeeee",
          "background": "#dfa548",
          "template": " üêç {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }} "
        },
        {
          "background": "#de76ad",
          "foreground": "#193549",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": " {{ .HEAD }} ",
          "type": "git"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{if .Root}} {{end}}{{.UserName}}@{{.Folder}}",
  "final_space": true,
  "version": 2
}
